<%-include('./partials/header')%>

<h1>Home</h1>

<p><%= homeStartingContent %></p>

<% posts.forEach(function(post) { %>
    <h1><a href="/posts/<%= post.postTitle %>"><%= post.postTitle %></a></h1>
    <p><%= post.postBody.substring(0, 200) %>...<a href="/posts/<%= post.postTitle %>">Read More</a></p>
<% });%>

<a href="/compose"><button class="btn btn-primary">New Post</button></a>

